<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.shape.SVGPath?>
<?import javafx.scene.text.Font?>

<BorderPane prefHeight="700.0" prefWidth="1400.0" styleClass="root" stylesheets="@style.css" xmlns="http://javafx.com/javafx/24.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="dk.easv.ticketgui.CoordinatorController">

    <!-- TOP: Header with title and logout -->
    <top>
        <HBox alignment="CENTER_LEFT" spacing="15" styleClass="header">
            <padding>
                <Insets bottom="20" left="30" right="30" top="20" />
            </padding>

            <!-- Calendar Icon -->
            <StackPane styleClass="header-icon">
                <SVGPath content="M19 4h-1V2h-2v2H8V2H6v2H5c-1.11 0-1.99.9-1.99 2L3 20c0 1.1.89 2 2 2h14c1.1 0 2-.9 2-2V6c0-1.1-.9-2-2-2zm0 16H5V9h14v11zM7 11h5v5H7z" styleClass="icon-path" />
            </StackPane>

            <VBox spacing="2">
                <Label styleClass="header-title" text="Event Coordinator">
                    <font>
                        <Font name="System Bold" size="24" />
                    </font>
                </Label>
                <Label styleClass="header-subtitle" text="Welcome, 1">
                    <font>
                        <Font size="14" />
                    </font>
                </Label>
            </VBox>

            <!-- Spacer -->
            <Region HBox.hgrow="ALWAYS" />

            <!-- Logout Button -->
            <Button onAction="#handleLogout" styleClass="logout-button" text="Logout">
                <graphic>
                    <SVGPath content="M17 7l-1.41 1.41L18.17 11H8v2h10.17l-2.58 2.58L17 17l5-5zM4 5h8V3H4c-1.1 0-2 .9-2 2v14c0 1.1.9 2 2 2h8v-2H4V5z" styleClass="logout-icon" />
                </graphic>
            </Button>
        </HBox>
    </top>

    <!-- CENTER: Main content -->
    <center>
        <VBox spacing="30">
            <padding>
                <Insets bottom="30" left="30" right="30" top="30" />
            </padding>

            <!-- Statistics Cards Row -->
            <HBox alignment="CENTER" spacing="20">
                <!-- Total Events Card -->
                <VBox spacing="15" styleClass="stat-card" HBox.hgrow="ALWAYS">
                    <padding>
                        <Insets bottom="25" left="25" right="25" top="25" />
                    </padding>

                    <HBox alignment="CENTER_LEFT" spacing="15">
                        <VBox spacing="5" HBox.hgrow="ALWAYS">
                            <Label styleClass="stat-label" text="Total Events">
                                <font>
                                    <Font size="14" />
                                </font>
                            </Label>
                            <Label fx:id="totalEventsLabel" styleClass="stat-value" text="2">
                                <font>
                                    <Font name="System Bold" size="36" />
                                </font>
                            </Label>
                        </VBox>

                        <StackPane styleClass="stat-icon-blue">
                            <SVGPath content="M19 4h-1V2h-2v2H8V2H6v2H5c-1.11 0-1.99.9-1.99 2L3 20c0 1.1.89 2 2 2h14c1.1 0 2-.9 2-2V6c0-1.1-.9-2-2-2zm0 16H5V9h14v11z" styleClass="icon-path-white" />
                        </StackPane>
                    </HBox>
                </VBox>

                <!-- Upcoming Events Card -->
                <VBox spacing="15" styleClass="stat-card" HBox.hgrow="ALWAYS">
                    <padding>
                        <Insets bottom="25" left="25" right="25" top="25" />
                    </padding>

                    <HBox alignment="CENTER_LEFT" spacing="15">
                        <VBox spacing="5" HBox.hgrow="ALWAYS">
                            <Label styleClass="stat-label" text="Upcoming Events">
                                <font>
                                    <Font size="14" />
                                </font>
                            </Label>
                            <Label fx:id="upcomingEventsLabel" styleClass="stat-value" text="2">
                                <font>
                                    <Font name="System Bold" size="36" />
                                </font>
                            </Label>
                        </VBox>

                        <StackPane styleClass="stat-icon-green">
                            <SVGPath content="M13 7h-2v4H7v2h4v4h2v-4h4v-2h-4V7zm-1-5C6.48 2 2 6.48 2 12s4.48 10 10 10 10-4.48 10-10S17.52 2 12 2zm0 18c-4.41 0-8-3.59-8-8s3.59-8 8-8 8 3.59 8 8-3.59 8-8 8z" styleClass="icon-path-white" />
                        </StackPane>
                    </HBox>
                </VBox>

                <!-- Total Tickets Card -->
                <VBox spacing="15" styleClass="stat-card" HBox.hgrow="ALWAYS">
                    <padding>
                        <Insets bottom="25" left="25" right="25" top="25" />
                    </padding>

                    <HBox alignment="CENTER_LEFT" spacing="15">
                        <VBox spacing="5" HBox.hgrow="ALWAYS">
                            <Label styleClass="stat-label" text="Total Tickets">
                                <font>
                                    <Font size="14" />
                                </font>
                            </Label>
                            <Label fx:id="totalTicketsLabel" styleClass="stat-value" text="1701">
                                <font>
                                    <Font name="System Bold" size="36" />
                                </font>
                            </Label>
                        </VBox>

                        <StackPane styleClass="stat-icon-purple">
                            <SVGPath content="M22 10V6c0-1.11-.9-2-2-2H4c-1.1 0-1.99.89-1.99 2v4c1.1 0 1.99.9 1.99 2s-.89 2-2 2v4c0 1.1.9 2 2 2h16c1.1 0 2-.9 2-2v-4c-1.1 0-2-.9-2-2s.9-2 2-2zm-2-1.46c-1.19.69-2 1.99-2 3.46s.81 2.77 2 3.46V18H4v-2.54c1.19-.69 2-1.99 2-3.46 0-1.48-.8-2.77-1.99-3.46L4 6h16v2.54zM11 15h2v2h-2zm0-4h2v2h-2zm0-4h2v2h-2z" styleClass="icon-path-white" />
                        </StackPane>
                    </HBox>
                </VBox>
            </HBox>

            <!-- My Events Section -->
            <VBox spacing="20">
                <!-- Section Header -->
                <HBox alignment="CENTER_LEFT">
                    <Label styleClass="section-title" text="My Events">
                        <font>
                            <Font name="System Bold" size="22" />
                        </font>
                    </Label>

                    <!-- Spacer -->
                    <Region HBox.hgrow="ALWAYS" />

                    <!-- Create Event Button -->
                    <Button onAction="#onClickCreateEvent" styleClass="create-event-button" text="Create Event">
                        <graphic>
                            <SVGPath content="M19 13h-6v6h-2v-6H5v-2h6V5h2v6h6v2z" styleClass="button-icon-white" />
                        </graphic>
                        <font>
                            <Font name="System Bold" size="14" />
                        </font>
                    </Button>
                </HBox>

                <!-- Events Grid -->
                <HBox alignment="TOP_LEFT" spacing="20">
                    <!-- Tech Conference Card -->
                    <VBox prefHeight="202.0" prefWidth="0.0" spacing="15" styleClass="event-card" HBox.hgrow="ALWAYS">
                        <padding>
                            <Insets bottom="20" left="20" right="20" top="20" />
                        </padding>

                           <HBox alignment="CENTER_LEFT" spacing="10">
                            <Label styleClass="event-title" text="Tech Conference 2024">
                                <font>
                                    <Font name="System Bold" size="16" />
                                </font>
                            </Label>

                               <Region HBox.hgrow="ALWAYS" />

                               <Label styleClass="status-badge-green" text="upcoming">
                                <font>
                                    <Font size="12" />
                                </font>
                            </Label>
                        </HBox>

                           <VBox spacing="8">
                            <HBox alignment="CENTER_LEFT" spacing="8">
                                <SVGPath content="M19 4h-1V2h-2v2H8V2H6v2H5c-1.11 0-1.99.9-1.99 2L3 20c0 1.1.89 2 2 2h14c1.1 0 2-.9 2-2V6c0-1.1-.9-2-2-2zm0 16H5V9h14v11z" scaleX="0.7" scaleY="0.7" styleClass="icon-path-gray" />
                                <Label styleClass="event-detail" text="2024-03-15 at 09:00 AM" />
                            </HBox>

                               <HBox alignment="CENTER_LEFT" spacing="8">
                                <SVGPath content="M22 10V6c0-1.11-.9-2-2-2H4c-1.1 0-1.99.89-1.99 2v4c1.1 0 1.99.9 1.99 2s-.89 2-2 2v4c0 1.1.9 2 2 2h16c1.1 0 2-.9 2-2v-4c-1.1 0-2-.9-2-2s.9-2 2-2z" scaleX="0.7" scaleY="0.7" styleClass="icon-path-gray" />
                                <Label styleClass="event-detail" text="245 tickets issued" />
                            </HBox>
                        </VBox>

                           <Label styleClass="event-location" text="Convention Center Hall A">
                            <font>
                                <Font size="13" />
                            </font>
                        </Label>

                           <!-- Action Buttons -->
                        <HBox alignment="CENTER_LEFT" spacing="10">
                            <Button styleClass="view-button" text="View" HBox.hgrow="ALWAYS">
                                <graphic>
                                    <SVGPath content="M12 4.5C7 4.5 2.73 7.61 1 12c1.73 4.39 6 7.5 11 7.5s9.27-3.11 11-7.5c-1.73-4.39-6-7.5-11-7.5zM12 17c-2.76 0-5-2.24-5-5s2.24-5 5-5 5 2.24 5 5-2.24 5-5 5zm0-8c-1.66 0-3 1.34-3 3s1.34 3 3 3 3-1.34 3-3-1.34-3-3-3z" styleClass="button-icon-blue" />
                                </graphic>
                            </Button>

                               <Button styleClass="icon-button">
                                <graphic>
                                    <SVGPath content="M19 8H5c-.55 0-1 .45-1 1v11c0 .55.45 1 1 1h14c.55 0 1-.45 1-1V9c0-.55-.45-1-1-1zm-3 7H8v-2h8v2z" styleClass="button-icon-gray" />
                                </graphic>
                            </Button>

                               <Button styleClass="icon-button">
                                <graphic>
                                    <SVGPath content="M6 19c0 1.1.9 2 2 2h8c1.1 0 2-.9 2-2V7H6v12zM19 4h-3.5l-1-1h-5l-1 1H5v2h14V4z" styleClass="button-icon-red" />
                                </graphic>
                            </Button>
                        </HBox>
                    </VBox>

                    <!-- Music Festival Card -->
                    <VBox spacing="15" styleClass="event-card" HBox.hgrow="ALWAYS">
                        <padding>
                            <Insets bottom="20" left="20" right="20" top="20" />
                        </padding>

                        <HBox alignment="CENTER_LEFT" spacing="10">
                            <Label styleClass="event-title" text="Music Festival">
                                <font>
                                    <Font name="System Bold" size="16" />
                                </font>
                            </Label>

                            <Region HBox.hgrow="ALWAYS" />

                            <Label styleClass="status-badge-green" text="upcoming">
                                <font>
                                    <Font size="12" />
                                </font>
                            </Label>
                        </HBox>

                        <VBox spacing="8">
                            <HBox alignment="CENTER_LEFT" spacing="8">
                                <SVGPath content="M19 4h-1V2h-2v2H8V2H6v2H5c-1.11 0-1.99.9-1.99 2L3 20c0 1.1.89 2 2 2h14c1.1 0 2-.9 2-2V6c0-1.1-.9-2-2-2zm0 16H5V9h14v11z" scaleX="0.7" scaleY="0.7" styleClass="icon-path-gray" />
                                <Label styleClass="event-detail" text="2024-04-20 at 06:00 PM" />
                            </HBox>

                            <HBox alignment="CENTER_LEFT" spacing="8">
                                <SVGPath content="M22 10V6c0-1.11-.9-2-2-2H4c-1.1 0-1.99.89-1.99 2v4c1.1 0 1.99.9 1.99 2s-.89 2-2 2v4c0 1.1.9 2 2 2h16c1.1 0 2-.9 2-2v-4c-1.1 0-2-.9-2-2s.9-2 2-2z" scaleX="0.7" scaleY="0.7" styleClass="icon-path-gray" />
                                <Label styleClass="event-detail" text="1456 tickets issued" />
                            </HBox>
                        </VBox>

                        <Label styleClass="event-location" text="City Park Amphitheater">
                            <font>
                                <Font size="13" />
                            </font>
                        </Label>

                        <!-- Action Buttons -->
                        <HBox alignment="CENTER_LEFT" spacing="10">
                            <Button styleClass="view-button" text="View" HBox.hgrow="ALWAYS">
                                <graphic>
                                    <SVGPath content="M12 4.5C7 4.5 2.73 7.61 1 12c1.73 4.39 6 7.5 11 7.5s9.27-3.11 11-7.5c-1.73-4.39-6-7.5-11-7.5zM12 17c-2.76 0-5-2.24-5-5s2.24-5 5-5 5 2.24 5 5-2.24 5-5 5zm0-8c-1.66 0-3 1.34-3 3s1.34 3 3 3 3-1.34 3-3-1.34-3-3-3z" styleClass="button-icon-blue" />
                                </graphic>
                            </Button>

                            <Button styleClass="icon-button">
                                <graphic>
                                    <SVGPath content="M19 8H5c-.55 0-1 .45-1 1v11c0 .55.45 1 1 1h14c.55 0 1-.45 1-1V9c0-.55-.45-1-1-1zm-3 7H8v-2h8v2z" styleClass="button-icon-gray" />
                                </graphic>
                            </Button>

                            <Button styleClass="icon-button">
                                <graphic>
                                    <SVGPath content="M6 19c0 1.1.9 2 2 2h8c1.1 0 2-.9 2-2V7H6v12zM19 4h-3.5l-1-1h-5l-1 1H5v2h14V4z" styleClass="button-icon-red" />
                                </graphic>
                            </Button>
                        </HBox>
                    </VBox>
                </HBox>
            </VBox>
        </VBox>
    </center>
</BorderPane>
