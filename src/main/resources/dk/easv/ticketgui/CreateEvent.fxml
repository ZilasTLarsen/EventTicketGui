<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.DatePicker?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.shape.SVGPath?>
<?import javafx.scene.text.Font?>

<BorderPane prefHeight="650.0" prefWidth="560.0" styleClass="dialog-root" stylesheets="@style.css" xmlns="http://javafx.com/javafx/24.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="dk.easv.ticketgui.CreateEventController">

    <!-- TOP: Dialog Header -->
    <top>
        <HBox alignment="CENTER_LEFT" styleClass="dialog-header">
            <padding>
                <Insets top="20" right="25" bottom="20" left="25"/>
            </padding>

            <Label text="Create New Event" styleClass="dialog-title">
                <font>
                    <Font name="System Bold" size="20"/>
                </font>
            </Label>

            <!-- Spacer -->
            <Region HBox.hgrow="ALWAYS"/>

            <!-- Close Button -->
            <Button fx:id="closeButton" onAction="#handleClose" styleClass="close-button">
                <graphic>
                    <SVGPath content="M19 6.41L17.59 5 12 10.59 6.41 5 5 6.41 10.59 12 5 17.59 6.41 19 12 13.41 17.59 19 19 17.59 13.41 12z" styleClass="close-icon"/>
                </graphic>
            </Button>
        </HBox>
    </top>

    <!-- CENTER: Form Content -->
    <center>
        <VBox spacing="20" styleClass="form-container">
            <padding>
                <Insets top="10" right="25" bottom="20" left="25"/>
            </padding>

            <!-- Required Section -->
            <VBox spacing="15" styleClass="form-section required-section">
                <padding>
                    <Insets top="20" right="20" bottom="20" left="20"/>
                </padding>

                <!-- Section Header -->
                <HBox spacing="8" alignment="CENTER_LEFT">
                    <Label text="REQUIRED" styleClass="section-badge required-badge">
                        <font>
                            <Font name="System Bold" size="10"/>
                        </font>
                    </Label>
                    <Label text="Essential Information" styleClass="section-title">
                        <font>
                            <Font name="System" size="14"/>
                        </font>
                    </Label>
                </HBox>

                <!-- Event Name -->
                <VBox spacing="6">
                    <Label text="Event Name *" styleClass="field-label">
                        <font>
                            <Font size="13"/>
                        </font>
                    </Label>
                    <TextField fx:id="eventNameField" promptText="Enter event name" styleClass="text-field"/>
                </VBox>

                <!-- Date and Time Row -->
                <HBox spacing="15">
                    <!-- Date -->
                    <VBox spacing="6" HBox.hgrow="ALWAYS">
                        <Label text="Date *" styleClass="field-label">
                            <font>
                                <Font size="13"/>
                            </font>
                        </Label>
                        <DatePicker fx:id="dateField" promptText="dd/mm/yyyy" styleClass="date-picker" HBox.hgrow="ALWAYS"/>
                    </VBox>

                    <!-- Time -->
                    <VBox spacing="6" HBox.hgrow="ALWAYS">
                        <Label text="Time *" styleClass="field-label">
                            <font>
                                <Font size="13"/>
                            </font>
                        </Label>
                        <TextField fx:id="timeField" promptText="--:--" styleClass="text-field">


                        </TextField>
                    </VBox>
                </HBox>

                <!-- Location -->
                <VBox spacing="6">
                    <Label text="Location *" styleClass="field-label">
                        <font>
                            <Font size="13"/>
                        </font>
                    </Label>
                    <TextField fx:id="locationField" promptText="Enter event location" styleClass="text-field">

                    </TextField>
                </VBox>

                <!-- Notes -->
                <VBox spacing="6">
                    <Label text="Notes *" styleClass="field-label">
                        <font>
                            <Font size="13"/>
                        </font>
                    </Label>
                    <TextArea fx:id="notesField" promptText="Important notes or instructions" styleClass="text-area" prefRowCount="4" wrapText="true"/>
                </VBox>
            </VBox>

            <!-- Optional Section -->
            <VBox spacing="15" styleClass="form-section optional-section">
                <padding>
                    <Insets top="20" right="20" bottom="20" left="20"/>
                </padding>

                <!-- Section Header -->
                <HBox spacing="8" alignment="CENTER_LEFT">
                    <Label text="OPTIONAL" styleClass="section-badge optional-badge">
                        <font>
                            <Font name="System Bold" size="10"/>
                        </font>
                    </Label>
                    <Label text="Additional Details" styleClass="section-title">
                        <font>
                            <Font name="System" size="14"/>
                        </font>
                    </Label>
                </HBox>

                <!-- Description -->
                <VBox spacing="6">
                    <Label text="Description" styleClass="field-label">
                        <font>
                            <Font size="13"/>
                        </font>
                    </Label>
                    <TextArea fx:id="descriptionField" promptText="Detailed event description" styleClass="text-area" prefRowCount="3" wrapText="true"/>
                </VBox>

                <!-- Capacity and Category Row -->
                <HBox spacing="15">
                    <!-- Capacity -->
                    <VBox spacing="6" HBox.hgrow="ALWAYS">
                        <Label text="Capacity" styleClass="field-label">
                            <font>
                                <Font size="13"/>
                            </font>
                        </Label>
                        <TextField fx:id="capacityField" promptText="Max attendees" styleClass="text-field">

                        </TextField>
                    </VBox>

                    <!-- Category -->
                    <VBox spacing="6" HBox.hgrow="ALWAYS">
                        <Label text="Category" styleClass="field-label">
                            <font>
                                <Font size="13"/>
                            </font>
                        </Label>
                        <ComboBox fx:id="categoryComboBox" promptText="Select category" styleClass="combo-box" maxWidth="Infinity" HBox.hgrow="ALWAYS"/>
                    </VBox>
                </HBox>
            </VBox>
        </VBox>
    </center>

    <!-- BOTTOM: Action Buttons -->
    <bottom>
        <HBox spacing="15" alignment="CENTER_RIGHT" styleClass="dialog-footer">
            <padding>
                <Insets top="20" right="25" bottom="25" left="25"/>
            </padding>

            <!-- Cancel Button -->
            <Button fx:id="cancelButton" onAction="#handleCancel" text="Cancel" styleClass="cancel-button" prefWidth="120">
                <font>
                    <Font name="System" size="14"/>
                </font>
            </Button>

            <!-- Create Event Button -->
            <Button fx:id="createEventButton" onAction="#handleCreateEvent" text="Create Event" styleClass="create-button" prefWidth="150">
                <font>
                    <Font name="System Bold" size="14"/>
                </font>
            </Button>
        </HBox>
    </bottom>
</BorderPane>
